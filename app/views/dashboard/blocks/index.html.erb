<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th><%= t(:caption) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @blocks.each do |block| %>
    <tr class="table table-hover table-condensed">
      <td><%= block.title %></td>

      <% if block.current? %>
        <td>
          <%= link_to t(:make_average_link), reset_as_current_block_path(block),
                      method: :post %>
        </td>
      <% else %>
        <td>
          <%= link_to t(:make_current_link), set_as_current_block_path(block),
                      method: :post %>
        </td>
      <% end %>
      <td><%= link_to t(:edit_link), edit_block_path(block) %></td>
      <td><%= link_to t(:delete_link), block, method: :delete,
                      data: { confirm: t(:delete_confirm) } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
